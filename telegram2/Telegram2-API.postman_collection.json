{
  "info": {
    "name": "Telegram2 Service API",
    "description": "Complete API collection for Telegram2 microservice using GramJS. NOTE: Phone numbers in URL query parameters must be URL-encoded (+ becomes %2B)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/health",
          "host": ["{{BASE_URL}}"],
          "path": ["health"]
        },
        "description": "Check if the service is running"
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. Send Verification Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"{{PHONE_NUMBER}}\",\n  \"apiId\": {{API_ID}},\n  \"apiHash\": \"{{API_HASH}}\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/send-code",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "send-code"]
            },
            "description": "Sends a verification code to the Telegram account. Saves apiId and apiHash for this phone number."
          }
        },
        {
          "name": "2. Verify Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"{{PHONE_NUMBER}}\",\n  \"code\": \"{{VERIFICATION_CODE}}\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/verify-code",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "verify-code"]
            },
            "description": "Verifies the code received via Telegram and completes authentication. Session is persisted."
          }
        },
        {
          "name": "Debug: Active Sessions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/debug/active-sessions",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "debug", "active-sessions"]
            },
            "description": "Returns list of phone numbers with active clients in memory (for debugging)"
          }
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Send Message to User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromPhone\": \"{{PHONE_NUMBER}}\",\n  \"toTarget\": \"{{TARGET_PHONE}}\",\n  \"message\": \"Hello! This is a test message.\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/messages/send",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "messages", "send"]
            },
            "description": "Sends a message to another user. Requires authentication."
          }
        },
        {
          "name": "Send Message to Group",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromPhone\": \"{{PHONE_NUMBER}}\",\n  \"toTarget\": \"@groupusername\",\n  \"message\": \"Hello group!\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/messages/send",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "messages", "send"]
            },
            "description": "Sends a message to a group or channel using @username"
          }
        }
      ]
    },
    {
      "name": "Unread Messages",
      "item": [
        {
          "name": "Get Unread Messages from User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/messages/unread?accountPhone={{PHONE_NUMBER_ENCODED}}&target={{TARGET_PHONE_ENCODED}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "messages", "unread"],
              "query": [
                {
                  "key": "accountPhone",
                  "value": "{{PHONE_NUMBER_ENCODED}}",
                  "description": "Your phone with + encoded as %2B"
                },
                {
                  "key": "target",
                  "value": "{{TARGET_PHONE_ENCODED}}",
                  "description": "Target phone with + encoded as %2B"
                }
              ]
            },
            "description": "Fetches unread messages from a specific user. Automatically marks them as read."
          }
        },
        {
          "name": "Get Unread Messages from Channel",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/messages/unread?accountPhone={{PHONE_NUMBER_ENCODED}}&target=@channelname",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "messages", "unread"],
              "query": [
                {
                  "key": "accountPhone",
                  "value": "{{PHONE_NUMBER_ENCODED}}",
                  "description": "Your phone with + encoded as %2B"
                },
                {
                  "key": "target",
                  "value": "@channelname",
                  "description": "Channel username with @"
                }
              ]
            },
            "description": "Fetches unread messages from a channel. Automatically marks them as read."
          }
        },
        {
          "name": "Get Unread Messages from Group",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/messages/unread?accountPhone={{PHONE_NUMBER_ENCODED}}&target=@groupname",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "messages", "unread"],
              "query": [
                {
                  "key": "accountPhone",
                  "value": "{{PHONE_NUMBER_ENCODED}}",
                  "description": "Your phone with + encoded as %2B"
                },
                {
                  "key": "target",
                  "value": "@groupname",
                  "description": "Group username with @"
                }
              ]
            },
            "description": "Fetches unread messages from a group. Automatically marks them as read."
          }
        },
        {
          "name": "Get Unread Messages by Chat ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/messages/unread?accountPhone={{PHONE_NUMBER_ENCODED}}&chatId=123456789",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "messages", "unread"],
              "query": [
                {
                  "key": "accountPhone",
                  "value": "{{PHONE_NUMBER_ENCODED}}",
                  "description": "Your phone with + encoded as %2B"
                },
                {
                  "key": "chatId",
                  "value": "123456789",
                  "description": "Chat/Group/Channel ID (from /api/chats/all endpoint)"
                }
              ]
            },
            "description": "Fetches unread messages from a chat using its ID. Use /api/chats/all to get chat IDs. Automatically marks them as read."
          }
        }
      ]
    },
    {
      "name": "Chats & Groups",
      "item": [
        {
          "name": "Get All Chats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/chats/all?accountPhone={{PHONE_NUMBER_ENCODED}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "chats", "all"],
              "query": [
                {
                  "key": "accountPhone",
                  "value": "{{PHONE_NUMBER_ENCODED}}",
                  "description": "Your phone with + encoded as %2B"
                }
              ]
            },
            "description": "Fetches all chats (users, groups, channels, bots) with their IDs and details."
          }
        },
        {
          "name": "Get Groups and Channels Only",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/chats/groups?accountPhone={{PHONE_NUMBER_ENCODED}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "chats", "groups"],
              "query": [
                {
                  "key": "accountPhone",
                  "value": "{{PHONE_NUMBER_ENCODED}}",
                  "description": "Your phone with + encoded as %2B"
                }
              ]
            },
            "description": "Fetches only groups and channels (excludes users and bots) with their IDs and details."
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "PHONE_NUMBER",
      "value": "+37379276083",
      "type": "string",
      "description": "Used in POST body (JSON)"
    },
    {
      "key": "PHONE_NUMBER_ENCODED",
      "value": "%2B37379276083",
      "type": "string",
      "description": "Used in URL query parameters (+ encoded as %2B)"
    },
    {
      "key": "TARGET_PHONE",
      "value": "+972584087777",
      "type": "string",
      "description": "Used in POST body (JSON)"
    },
    {
      "key": "TARGET_PHONE_ENCODED",
      "value": "%2B972584087777",
      "type": "string",
      "description": "Used in URL query parameters (+ encoded as %2B)"
    },
    {
      "key": "API_ID",
      "value": "25872607",
      "type": "string"
    },
    {
      "key": "API_HASH",
      "value": "d6b4e90157370c68eefd02872c165541",
      "type": "string"
    },
    {
      "key": "VERIFICATION_CODE",
      "value": "12345",
      "type": "string"
    }
  ]
}
